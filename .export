# .export

# history
export HISTFILESIZE="100000"
export HISTSIZE="100000"
export PROMPT_COMMAND="history -a"
export HISTCONTROL=ignoreboth:erasedups

# GPG
export GPG_TTY="$(tty)"
export GPGKEY=""

# Locale
export LC_CTYPE="C"

# Man
export LESS_TERMCAP_md="$(tput bold; tput setaf 4)"

# Editor
export EDITOR="vim"

# GIT prompt
export GIT_PROMPT_ONLY_IN_REPO=0
export GIT_PROMPT_SHOW_UPSTREAM=1
export GIT_PROMPT_SHOW_UNTRACKED_FILES=all
export GIT_PROMPT_SHOW_CHANGED_FILES_COUNT=1
export GIT_PROMPT_THEME=Minimal-custom

# GO
export GOPATH=~/go

# Path should be the last exported variable
export PATH="~/bin:${GOPATH}/bin:/opt/local/bin:/opt/local/sbin:/opt/local/Library/Frameworks/Python.framework/Versions/3.5/bin:${PATH}"
