# .export

# oh-my-zsh
export ZSH=~/.oh-my-zsh
export ZSH_THEME="sunaku"
export CASE_SENSITIVE="true"
export HYPHEN_INSENSITIVE="true"

# history
export HISTFILESIZE="100000"
export HISTSIZE="100000"
export HISTCONTROL=ignoreboth:erasedups

# GPG
export GPG_TTY="$(tty)"
export GPGKEY=""

# Locale
export LC_CTYPE="C"

# Man
export LESS_TERMCAP_md="$(tput bold; tput setaf 4)"
export LESS="-F -X -r $LESS"

# Editor
export EDITOR="vim"

# GO
export GOPATH=~/go

# Extra bins
export EXTRA_BIN=~/bin

# Path should be the last exported variable
export PATH=${EXTRA_BIN}:${GOPATH}/bin:/opt/local/bin:/opt/local/sbin:/opt/local/Library/Frameworks/Python.framework/Versions/3.5/bin:${PATH}
